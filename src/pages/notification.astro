---
import Layout from '../layouts/Layout.astro';
import data from '../../public/data.json';
import '../../assets/scss/astro-ecommerce.scss';
import CardCategory from '../components/products/cardCategory';
import ProductFeature from '../components/products/productFeature';
import Navbar from '../components/navbar';
import StoreDoubleColumn from '../components/store/storeDoubleColumn';
import TestimonialsFade from '../components/promo/testimonialsFade';
import PromoSectionSmall from '../components/promo/promoSectionSmall';
import Footer from '../components/footer';

---

<Layout title="notification">
	<main>
    <Navbar />
    <PromoSectionSmall 
      title={"공지사항"}
      pageHeaderBgImg={"https://images.unsplash.com/photo-1527333656061-ca7adf608ae1?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1974&q=80"}
      pageHeaderMinVh="30vh"
    />
    <div class="container my-5">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>공지사항</h4>
      </div>
      <div class="row sm-6">
        {data.notifications.map(notification => 
          <div class="col-md-1 col-lg-3">
            <h4>
              <a hre="#" class="title">{notification.title}</a>
            </h4>
            <h5> 
              <i class="fa fa-calendar"></i>
              {notification.date}
            </h5>
            <p class="description">{notification.content}</p>    
          </div>
        )}
      </div>

    <Footer />
  </main>

</Layout>